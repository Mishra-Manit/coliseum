# Application Settings
ENVIRONMENT=development
DEBUG=True

# MongoDB Configuration (Atlas)
MONGODB_URL=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=coliseum

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# Perplexity API (for web search in Summary Agent)
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# AI Model Configuration
AI_INITIAL_BALANCE=100000
AI_MAX_BET_PERCENTAGE=0.10
AI_MIN_BET_AMOUNT=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# Redis Configuration (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logfire Observability
LOGFIRE_TOKEN=your-logfire-token-here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://coliseum.manitmishra.com

# Logging
LOG_LEVEL=INFO
